extends layout

block content
  script(type='text/javascript' src='https://d3js.org/d3.v4.min.js')
  script(type='text/javascript' src='/javascripts/pomodoro.js')
  div(class="content-div")
    h1= title
    form(name="enter timer settings", method="post", onsubmit="event.preventDefault();")
      div(class="input-div").input
        span.label Work interval:
        br
        input(type="number", min="1", max="60", value="25", name="work", class="number-input", id="input-work") 
        span.label  minutes
      div(class="input-div").input
        span.label Rest interval:
        br
        input(type="number",min="1", max="60", value="5", name="rest", class="number-input", id="input-rest") 
        span.label  minutes
      div(class="input-div").actions
        span.label Which interval to start with?
        br
        input(type="radio" name="toggle" id="toggle-off" value="0" hidden checked)
        label(for="toggle-off" class="switch switch-off") Work
        input(type="radio" name="toggle" id="toggle-on" value="1" hidden)
        label(for="toggle-on" class="switch switch-on") Rest
      div(class="input-div" id="actions-div").actions
        input(type="submit", value="Start timer", class="start-button", onclick="start()" )

    div(class="svg-html-div" id="svg-div")
      svg(id="polar-svg", width="450", height="450")

